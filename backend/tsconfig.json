{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,

    // Migration options - keep these until migration is complete
    "allowJs": true,
    "checkJs": true,

    // Recommended options for modern projects
    "strict": true,
    "noUncheckedSideEffectImports": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,

    // To be enabled later:
    // "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,

    // Other options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "types/**/*.d.ts"]
}
